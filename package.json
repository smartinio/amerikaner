{
  "name": "amerikaner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "ts-patch install -s",
    "ws-dev": "tsx watch server/ws.dev.ts --tsconfig tsconfig.json",
    "dev": "NODE_ENV=development concurrently 'next dev' 'yarn ws-dev'",
    "build": "next build && rm -rf dist && tsc --project tsconfig.server.json",
    "start": "NODE_ENV=production node dist/server/index.js",
    "test:game": "jest --testEnvironment=node --passWithNoTests --forceExit --testPathPattern=tests/server/",
    "test:pages": "jest --testEnvironment=jsdom --passWithNoTests --forceExit --testPathPattern=tests/ui/",
    "test:boot": "BOOT_TEST=1 yarn start",
    "test": "yarn test:game && yarn test:pages",
    "lint": "next lint"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.3.7",
    "@dnd-kit/core": "^6.0.8",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.6",
    "@next/font": "^13.0.3",
    "@tanstack/react-query": "^4.29.3",
    "@trpc/client": "^10.4.3",
    "@trpc/next": "^10.4.3",
    "@trpc/react-query": "^10.4.3",
    "@trpc/server": "^10.4.3",
    "canvas-confetti": "^1.6.0",
    "framer-motion": "^10.12.4",
    "next": "^13.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-no-ssr": "^1.1.0",
    "uuid": "^9.0.0",
    "ws": "^8.10.0",
    "zod": "^3.19.1",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/canvas-confetti": "^1.6.0",
    "@types/node": "18.15.13",
    "@types/react": "18.0.37",
    "@types/react-dom": "18.0.11",
    "@types/react-no-ssr": "^1.1.3",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "concurrently": "^8.0.1",
    "eslint": "8.38.0",
    "eslint-config-next": "13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-mock-random": "^1.1.1",
    "ts-patch": "3.0.0-beta3",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "typescript-transform-paths": "^3.4.6"
  }
}
