{
  "name": "amerikaner",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=20.12.0"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "ws-dev": "tsx watch server/ws.dev.ts --tsconfig tsconfig.server.json",
    "dev": "NODE_ENV=development concurrently 'next dev' 'pnpm ws-dev'",
    "build:client": "NODE_OPTIONS=\"--max-old-space-size=8192\" next build",
    "build:server": "rm -rf dist && NODE_OPTIONS=\"--max-old-space-size=8192\" tsc --p tsconfig.server.json",
    "build": "pnpm build:client && pnpm build:server",
    "start": "NODE_ENV=production node dist/server/index.js",
    "test:game": "jest --testEnvironment=node --passWithNoTests --forceExit --testPathPattern=tests/server/",
    "test:pages": "jest --testEnvironment=jsdom --passWithNoTests --forceExit --testPathPattern=tests/ui/",
    "test:boot": "BOOT_TEST=1 pnpm start",
    "test": "pnpm test:game && pnpm test:pages",
    "lint": "next lint"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@tanstack/react-query": "^5.28.9",
    "@tanstack/react-query-devtools": "^5.28.10",
    "@trpc/client": "^11.0.0-next.327",
    "@trpc/next": "^11.0.0-next.327",
    "@trpc/react-query": "^11.0.0-next.327",
    "@trpc/server": "^11.0.0-next.327",
    "canvas-confetti": "^1.9.2",
    "framer-motion": "^11.0.8",
    "next": "^14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-no-ssr": "^1.1.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^16.0.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/jest": "^29.5.12",
    "@types/node": "22.10.3",
    "@types/react": "18.2.73",
    "@types/react-dom": "18.2.23",
    "@types/react-no-ssr": "^1.1.7",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "eslint": "9.15.0",
    "eslint-config-next": "14.1.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-random": "^1.1.1",
    "ts-patch": "3.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "typescript-transform-paths": "^3.4.6"
  }
}
