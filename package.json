{
  "name": "amerikaner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "ts-patch install -s",
    "ws-dev": "tsx watch server/ws.dev.ts --tsconfig tsconfig.server.json",
    "dev": "NODE_ENV=development concurrently 'next dev' 'yarn ws-dev'",
    "build:client": "NODE_OPTIONS=\"--max-old-space-size=4096\" next build",
    "build:server": "rm -rf dist && NODE_OPTIONS=\"--max-old-space-size=4096\" tsc --p tsconfig.server.json",
    "build": "yarn build:client && yarn build:server",
    "start": "NODE_ENV=production node dist/server/index.js",
    "test:game": "jest --testEnvironment=node --passWithNoTests --forceExit --testPathPattern=tests/server/",
    "test:pages": "jest --testEnvironment=jsdom --passWithNoTests --forceExit --testPathPattern=tests/ui/",
    "test:boot": "BOOT_TEST=1 yarn start",
    "test": "yarn test:game && yarn test:pages",
    "lint": "next lint"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.7.0",
    "@dnd-kit/core": "^6.0.8",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@tanstack/react-query": "^4.29.19",
    "@trpc/client": "^10.4.3",
    "@trpc/next": "^10.4.3",
    "@trpc/react-query": "^10.4.3",
    "@trpc/server": "^10.4.3",
    "canvas-confetti": "^1.6.0",
    "framer-motion": "^10.12.18",
    "next": "^13.4.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-no-ssr": "^1.1.0",
    "uuid": "^9.0.0",
    "ws": "^8.10.0",
    "zod": "^3.19.1",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/canvas-confetti": "^1.6.0",
    "@types/node": "20.3.3",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/react-no-ssr": "^1.1.3",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "concurrently": "^8.2.0",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.9",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-mock-random": "^1.1.1",
    "ts-patch": "3.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "typescript-transform-paths": "^3.4.6"
  }
}
